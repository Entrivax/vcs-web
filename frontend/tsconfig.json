{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "strict": true,
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "include": ["src/**/*"]
}